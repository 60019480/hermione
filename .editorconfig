# top-most EditorConfig file
root = true

[*]
charset = utf-8

end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

indent_style = space
indent_size = 4

max_line_length = 120

[{Makefile,GNUmakefile}]
indent_style = tab
